        new Mascotas() {mascota = "Gatos", imagen = "imgShop/gato.jpg" },
        new Mascotas() {mascota = "Perros", imagen ="imgShop/perro.jpg" },
        new Mascotas() {mascota = "Hamsters", imagen = "imgShop/hamster.webp" }
    };


}
