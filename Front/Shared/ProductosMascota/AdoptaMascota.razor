@using OjedaGrowShop.Helper
<style>

    .image {
        background-color: #50A7FF;
        position: relative;
        flex: 1;
        max-width: 360px;
        margin: 20px;
        box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
        border-radius: 5px;
    }

        .image img {
            opacity: 0.8;
            position: relative;
            vertical-align: top;
            transition: 0.6s;
            transition-property: opacity;
            overflow: hidden;
        }

        .image:hover img {
            opacity: 1;
        }

        .image .details {
            z-index: auto;
            position: absolute;
            top: 0;
            right: 0;
            color: #fff;
            width: 100%;
            height: 100%;
        }

            .image .details h2 {
                text-align: center;
                font-size: 35px;
                text-transform: uppercase;
                font-weight: 300;
                margin-top: 80px;
                transition: 0.4s;
                transition-property: all;
            }

                .image .details h2 span {
                    font-weight: 900;
                }

        .image:hover .details h2 {
            transform: translateY(-30px);
        }

        .image .details p {
            margin: 30px 30px 0 30px;
            transition: 0.4s;
            transform: translateY(600px);
        }

        .image:hover .details p {
            opacity: 1;
            transform: translateY(-50px);
        }

    .more {
        position: absolute;
        width: 100%;
        background-color: #fff;
        display: flex;
        align-content: center;
        bottom: -80px;
        padding: 15px;
        transition: 0.4s;
        transition-property: all;
    }

    .image:hover .more {
        bottom: 0;
    }

    @@media screen and (max-width:720px) {
        .image .details h2 {
            margin-top: 40px;
            font-size: 25px;
        }
    }
</style>


<div class="row mt-5 mb-5 mx-auto my-0 justify-content-center">
    <div class="row text-center">
        <h2>¡Dale una familia a nuestros amigos!</h2>
    </div>

    <div class="row mt-5">

        @for (var i = 1; i < mascotas.Count(); i++)
        {
            if (i % 2 == 0)
            {
                <div data-aos="fade-bottom" class="col-12 col-md-4 col-xl-4 mt-4 mt-md-5 mx-auto my-0">
                    <div class="row-12">
                        <div class="image mx-auto my-0 overflow-hidden">
                            <img src="@mascotas[i].imagen" class="img-fluid  overflow-hidden" />
                            <div class="details">
                                <h2><span>@mascotas[i].mascota</span></h2>
                                <p style="font-size:1.4rem;">¡Los mejores compañeros de vida que puedes tener!</p>
                                <div class="more">
                                    <div>
                                        <MatButtonLink Icon="pets" Href="">Saber más</MatButtonLink>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                if (i == 1)
                {
                    <div data-aos="fade-right" class="col-12 col-md-4 col-xl-4 mt-0 mx-auto my-0">
                        <div class="row-12">
                            <div class="image mx-auto my-0 overflow-hidden">
                                <img src="@mascotas[i].imagen" class="img-fluid" />
                                <div class="details">
                                    <h2><span>@mascotas[i].mascota</span></h2>
                                    <p style="font-size:1.4rem;">¡Dale amor a tu hogar con un buen compañero!</p>
                                    <div class="more">
                                        <div>
                                            <MatButtonLink Icon="pets" Href="">Saber más</MatButtonLink>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div data-aos="fade-left" class="col-12 col-md-4 col-xl-4 mt-0 mx-auto my-0">
                        <div class="row-12 mt-4 mt-md-0">
                            <div class="image mx-auto my-0 overflow-hidden">
                                <img src="@mascotas[i].imagen" class="img-fluid" />
                                <div class="details">
                                    <h2><span>@mascotas[i].mascota</span></h2>
                                    <p style="font-size:1.4rem;">¡Son pequeños, pero tiernos!</p>
                                    <div class="more">
                                        <div>
                                            <MatButtonLink Icon="pets" Href="">Saber más</MatButtonLink>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            }

        }


    </div>
</div>




@code {
    List<Mascotas> mascotas = new List<Mascotas>()
    {
