<style>

    .image {
        background-color: #50A7FF;
        position: relative;
        flex: 1;
        max-width: 560px;
        margin: 20px;
        box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
        border-radius: 5px;
    }

        .image img {
            opacity: 0.8;
            position: relative;
            vertical-align: top;
            transition: 0.6s;
            transition-property: opacity;
            overflow: hidden;
        }

        .image:hover img {
            opacity: 1;
        }

        .image .details {
            z-index: auto;
            position: absolute;
            top: 0;
            right: 0;
            color: #fff;
            width: 100%;
            height: 100%;
        }

            .image .details h2 {
                text-align: center;
                font-size: 35px;
                text-transform: uppercase;
                font-weight: 300;
                margin-top: 150px;
                transition: 0.4s;
                transition-property: all;
            }

                .image .details h2 span {
                    font-weight: 900;
                }

        .image:hover .details h2 {
            transform: translateY(-30px);
        }

        .image .details p {
            margin: 30px 30px 0 30px;
            transition: 0.4s;
            transform: translateY(600px);
        }

        .image:hover .details p {
            opacity: 1;
            transform: translateY(-50px);
        }

    .more {
        position: absolute;
        width: 100%;
        background-color: #fff;
        display: flex;
        align-content: center;
        bottom: -80px;
        padding: 15px;
        transition: 0.4s;
        transition-property: all;
    }

    .image:hover .more {
        bottom: 0;
    }

    @@media screen and (max-width:720px) {
        .image .details h2 {
            margin-top: 40px;
            font-size: 25px;
        }
    }
</style>

